@page
@model Projekt_2.Pages.ProductCategories.IndexModel

@{
    ViewData["Title"] = "Lista produktów w kategoriach";
}

<h1>Lista produktów w kategoriach</h1>

<p>
    <a asp-page="Create">Dodaj produkt do kategorii</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory[0].Products)
            </th>
            <th></th><th></th>
     
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory[0].Categories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductCategory) {
        <tr>
            <td>
                <img src=@Html.DisplayFor(modelItem => item.Products.img) width="80" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
