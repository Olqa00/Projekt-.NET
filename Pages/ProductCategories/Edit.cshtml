@page
@model Projekt_2.Pages.ProductCategories.EditModel

@{
    ViewData["Title"] = "Edytuj produkt w kategorii";
}

<h1>Edytuj produkt w kategorii</h1>

<h4>Produkt w kategorii</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductCategory.id" />
            <div class="form-group">
                <label asp-for="ProductCategory.productID" class="control-label"></label>
                <select asp-for="ProductCategory.productID" class="form-control" asp-items="ViewBag.productID"></select>
                <span asp-validation-for="ProductCategory.productID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory.categoryID" class="control-label"></label>
                <select asp-for="ProductCategory.categoryID" class="form-control" asp-items="ViewBag.categoryID"></select>
                <span asp-validation-for="ProductCategory.categoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
