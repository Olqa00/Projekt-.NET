@page
@model Projekt_2.Pages.ProductCategories.DetailsModel

@{
    ViewData["Title"] = "Szczegóły produktów w kategorii";
}

<h1>Szczegóły</h1>

<div>
    <h4>Produkt w kategorii</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.Products)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Products.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.Categories)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Categories.name)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.ProductCategory.id">Edit</a> |
    <a asp-page="./Index">Powrót do listy</a>
</div>
