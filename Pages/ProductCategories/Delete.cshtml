@page
@model Projekt_2.Pages.ProductCategories.DeleteModel

@{
    ViewData["Title"] = "Usuń produkt z kategorii";
}

<h1>Usuń produkt z kategorii</h1>

<h3>Jesteś pewien, że chcesz usunąć?</h3>
<div>
    <h4>Produkt w kategorii</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.Products)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Products.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory.Categories)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory.Categories.name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="ProductCategory.id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót do produktów w kategoriach</a>
    </form>
</div>
